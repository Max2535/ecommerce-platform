# Node Environment
NODE_ENV=production

# User Service
USER_SERVICE_PORT=4001
USER_DB_HOST=postgres
USER_DB_PORT=5432
USER_DB_NAME=userdb
USER_DB_USER=postgres
USER_DB_PASSWORD=postgres

# Product Service
PRODUCT_SERVICE_PORT=4002
MONGODB_URI=mongodb://mongodb:27017/productdb

# Order Service
ORDER_SERVICE_PORT=4003
ORDER_DB_HOST=mysql
ORDER_DB_PORT=3306
ORDER_DB_NAME=orderdb
ORDER_DB_USER=root
ORDER_DB_PASSWORD=mysql_password

# API Gateway
API_GATEWAY_PORT=4000
SCHEMA_POLL_INTERVAL=10000

# JWT
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRES_IN=7d

# Business Rules
TAX_RATE=0.07
SHIPPING_COST=50
FREE_SHIPPING_THRESHOLD=1000